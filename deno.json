{
  "name": "@levibostian/decaf-sdk",
  "exports": {
    ".": "./main.ts"
  },
  "publish": {
    "include": [
      "LICENSE",
      "README.md",
      "*.ts",
      "deno.json",
      "deno.lock"
    ],
    "exclude": [
      "*.test.ts"
    ]
  },
  "imports": {
    "@cross/env": "jsr:@cross/env@^1.0.3"
  },
  "tasks": {
    "test": "deno test --allow-all --junit-path reports/junit.xml --coverage=reports/coverage/",
    "lint": "deno lint --fix"
  },
  "fmt": {
    "lineWidth": 150,
    "semiColons": false,
    "include": ["**/*.ts"],
    "exclude": ["**/*.json", "**/*.md", "**/*.yml", "**/*.yml", "**/*.lock"]
  },
  "lint": {
    "rules": {
      "exclude": ["require-await"]
    }
  },
  "lock": {
    "path": "./deno.lock",
    "frozen": true
  }
}