{
  "name": "@levibostian/decaf-sdk",
  "exports": {
    ".": "./main.ts",
    "./testing:": "./testing/mod.ts"
  },
  "publish": {
    "include": [
      "LICENSE",
      "README.md",
      "*.ts",
      "deno.json",
      "deno.lock"
    ],
    "exclude": [
      "*.test.ts"
    ]
  },
  "imports": {
    "@cross/env": "jsr:@cross/env@^1.0.3",
    "@cross/fs": "jsr:@cross/fs@^0.1.13",
    "@cross/utils": "jsr:@cross/utils@^0.16.0",
    "ansi-regex": "npm:ansi-regex@^6.2.2"
  },
  "tasks": {
    "test": "deno test --allow-all --junit-path reports/junit.xml --coverage=reports/coverage/ --coverage-raw-data-only && deno coverage reports/coverage/ --include=$(pwd)",
    "lint": "deno lint --fix"
  },
  "fmt": {
    "lineWidth": 150,
    "semiColons": false,
    "include": ["**/*.ts"],
    "exclude": ["**/*.json", "**/*.md", "**/*.yml", "**/*.yml", "**/*.lock"]
  },
  "lint": {
    "rules": {
      "exclude": ["require-await"]
    }
  },
  "lock": {
    "path": "./deno.lock",
    "frozen": true
  }
}